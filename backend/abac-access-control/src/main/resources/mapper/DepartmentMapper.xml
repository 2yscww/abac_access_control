<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xie.platform.mapper.DepartmentMapper">

    <!-- 根据部门ID查询 -->
    <select id="selectById" resultType="com.xie.platform.model.Department">
        SELECT
            dept_id,
            dept_name
        FROM departments
        WHERE dept_id = #{deptId}
    </select>

</mapper>
